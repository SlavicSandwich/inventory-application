extends layout 

block content 
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Developer:
      input#name.form-control(type='text', placeholder='Respawn, CDPR etc.' name='name' required='true' value=(undefined===developer ? '' : developer.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg