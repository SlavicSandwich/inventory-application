extends layout 

block content 
  h1 #{title}: #{developer.name}

  if games_by_developer.length

    p #[strong Delete the following games before attempting to delete this developer.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Games

      dl
      each game in games_by_developer
        img(src=game.image_url)
        dt
          a(href=game.url) #{game.name}
        dd #{game.description}

  else
    p Do you really want to delete this developer?

    form(method='POST' action='')
      div.form-group
        input#developerid.form-control(type='hidden',name='developerid', required='true', value=developer._id )

      button.btn.btn-primary(type='submit') Delete